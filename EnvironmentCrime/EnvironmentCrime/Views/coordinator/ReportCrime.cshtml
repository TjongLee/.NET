@{
    Layout = "_MainLayout";
}
@model EnvironmentCrime.Models.Errand
<nav>
    <ul>
        <li><a class="reports" asp-controller="Coordinator" asp-action="Coordinator">Start(Ärenden)</a></li>
        <li><a class="reportAdd" asp-controller="Coordinator" asp-action="ReportCrime"> Rapportera brott</a></li>
        <li class="right"><a class="logout" asp-controller="Home" asp-action="Index">Logga ut</a></li>
    </ul>
</nav><!-- End Nav -->
<div id="content">
    <h2>Rapportera brott</h2>
    <p class="info">Du är inloggad som samordnare</p>

    <p>Fyll i formuläret nedan, alla rutor markerade med stjärna (*) måste fyllas i</p>

    <form method="post"  asp-controller="Citizen" asp-action="Validate">
        <p>
            <input type="hidden" name="isSubmitted" value="true" />
        </p>
        <p>
            <label class="label" asp-for="Place"></label><br />
            <input asp-for="Place"/> *
            <span asp-validation-for="Place"></span>
        </p>
        <p>
            <label class="label" asp-for="TypeOfCrime"></label><br />
            <input asp-for="TypeOfCrime"/> *
            <span asp-validation-for="TypeOfCrime"></span>
        </p>
        <p>
            <label class="label" asp-for="DateOfObservation"></label><br />
            <input asp-for="DateOfObservation" /> *
            <span asp-validation-for="DateOfObservation"></span>
        </p>
        <p>
            <label class="label" asp-for="InformerName"></label><br />
            <input asp-for="InformerName"/> *
            <span asp-validation-for="InformerName"></span>
        </p>
        <p>
            <label class="label" asp-for="InformerPhone"></label><br />
            <input asp-for="InformerPhone"/> *
            <span asp-validation-for="InformerPhone"></span>
        </p>
        <p>
            <label class="label" asp-for="Observation"></label><br />
            <textarea name="observation" rows="5" cols="16" asp-for="Observation"></textarea>
        </p>
        <p>
            <input class="button" type="submit" value="Skicka in" asp-controller="Coordinator" asp-action="Validate" />
        </p>
    </form>
